<%= render "shared/banner" %>

<div class="container">
  <div class="d-flex justify-content-between mt-5 mb-5">
    <div class="card-category card-category-watch">
      <p class="heading_medium_font">Watch</p>
    </div>
    <div class="card-category card-category-earing">
      <p class="heading_medium_font">Earing</p>
    </div>
    <div class="card-category card-category-bracelet">
      <p class="heading_medium_font">Bracelet</p>
    </div>
    <div class="card-category card-category-ring">
      <p class="heading_medium_font">Ring</p>
    </div>
    <div class="card-category card-category-necklace">
      <p class="heading_medium_font">Necklace</p>
    </div>
  </div>

  <p class="heading_medium_font">
    Our best jewels available
  </p>

  <div class="row d-flex justify-content-between">
    <% @jewels.each do |jewel| %>
      <div class="col-4 mt-5">
        <div class="main-card">
          <div class="img-card">
            <%= cl_image_tag(jewel.photos.first.key) %>
          </div>
        <div class="card-info">
          <div class="card-info-top">
            <div class="card-text">
              <p class="heading_small_font">
                <%= jewel.name %>
              </p>
              <p class="paragraph_small_font text-ellipsis">
              <%= jewel.comment %>
              </p>
            </div>
            <p class="badge label_font"><%= jewel.category %></p>
          </div>
          <div class="card-info-bottom">
            <%= link_to 'Learn more', jewel_path(jewel), class: 'btn-secondary paragraph_medium_font' %>
            <p class="label_font m-0 align-self-end">$<%= jewel.price_per_day %> per day</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
