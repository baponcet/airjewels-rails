<div class="container w-50 mt-5">

  <div class="bg-form">
    <div class="text-white p-3 bg-title">
      <h2 class="text-center m-0">Create your account</h2>
    </div>

    <div class="p-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs mt-3">
          <div class="row">
            <div class="col-6">
              <%= f.input :first_name %>
            </div>
            <div class="col-6">
              <%= f.input :last_name %>
            </div>
          </div>

          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }%>

          <div class="row">
            <div class="col-6">
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="col-6">
              <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
            </div>
          </div>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: 'btn-primary w-100' %>
        </div>
      <% end %>

      <div class="align-items-center mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
