<div class="container" style= "margin-top:2%">
  <div class= "d-flex justify-content-between margin-bottom: 5% ">
    <%= link_to "Edit this jewel", edit_jewel_path(@jewel) if policy(@jewel).edit?%>
      <% if policy(@jewel).destroy? %>
        <%= link_to "Delete", jewel_path(@jewel), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <% end %>
  </div>
  <div class="row" style= "margin-top: 5%">
    <div class="col-6 d-flex" style= "justify-content:center">
      <% if @jewel.photos.length > 1 %>
        <div id="carouselExampleControls-<%= @jewel.id %> "class="carousel slide" data-bs-interval="false" >
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @jewel.photos.first.key, height: 300, width: 400, crop: :fill %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag @jewel.photos.second.key, height: 300, width: 400, crop: :fill %>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls-<%= @jewel.id %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls-<%= @jewel.id %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <%else%>
        <div class="img-show-jewel">
          <%= cl_image_tag @jewel.photos.first.key, crop: :fill %>
        </div>
      <% end %>
    </div>
    <div class="col-6 d-flex flex-column justify-content-between">
      <div>
        <h1 class="pb-3"><%= @jewel.name %></h1>
        <h2><%= @jewel.brand %></h2>
        <h3 class="pb-3"><strong>â‚¬<%=  @jewel.price_per_day.round %></strong> per day</h3>
        <p><%= @jewel.comment %></p>
      </div>
      <div class="d-flex justify-content-between align-items-end w-100">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Book</button>
        <%= link_to "All our jewels", root_path, class: "green-link" %>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header d-flex justify-content-center" style= "backgournd-color: black">
              <h4>Please select your rental period</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <div class="new-lists">
                  <div class="new-list mt-3" style="mb:5% mt:5%">
                    <%= simple_form_for [ @jewel, @booking ] do |f| %>
                      <%= f.input :starting_date, as: :date, html5: true %>
                      <%= f.input :ending_date, as: :date, html5: true  %>
                      <%= f.button :submit, "Book now", class: 'btn-primary w-100 mt-4' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
