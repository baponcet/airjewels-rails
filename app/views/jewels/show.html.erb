<div class="container" style= "margin-top:2%">
<h1><%= @jewel.category%></h1>
  <div class="row" style= "margin-top: 2% color:gray">


<%= link_to "Edit this jewel", edit_jewel_path(@jewel) if policy(@jewel).edit?%>
<% if policy(@jewel).destroy? %>
  <%= link_to "Delete", jewel_path(@jewel), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>


      <div class="col d-flex" style="justify-items:center">
         <%if @jewel.photos.length > 1%>
          <div id="carouselExampleControls-<%= @jewel.id %>" class="carousel slide" data-bs-interval="false" >
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= cl_image_tag @jewel.photos.first.key, height: 300, width: 400, crop: :fill %>
              </div>
              <div class="carousel-item">
                <%= cl_image_tag @jewel.photos.second.key, height: 300, width: 400, crop: :fill %>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls-<%= @jewel.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls-<%= @jewel.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
            <%else%>
              <div class="carousel-item active d-flex justify-content-center">
                <div>
                  <%= cl_image_tag @jewel.photos.first.key, height: 300, width: 400, crop: :fill %>
                </div>
              </div>
           <% end %>
      </div>
      <div class="col">
        <h1><%= @jewel.name %></h1>
        <h2><%= @jewel.brand %></h2>
        <br>
        <h3>Only <strong><%=  @jewel.price_per_day %></strong>$ per day</h3>
        <p><%= @jewel.comment %></p>
        <br>
      <div class="col d-flex justify-content-between">
        <h3><strong><%= link_to "Book now", new_jewel_booking_path(@jewel), class: "btn-primary" %></strong></h3>
        <h4><strong><%= link_to "All our jewels", jewels_path, class: "btn-secondary" %></strong></h4>
        <%= link_to "Edit this jewel", edit_jewel_path(@jewel) if policy(@jewel).edit?%>
        <% if policy(@jewel).destroy? %>
          <%= link_to "Delete", jewel_path(@jewel), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Booking</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <div class="container">
        <div class="new-lists">
          <div class="new-list">
            <%= simple_form_for [ @jewel, @booking ] do |f| %>
              <%= f.input :starting_date, as: :date, html5: true %>
              <%= f.input :ending_date, as: :date, html5: true  %>
              <%= f.submit "Book", class: "btn btn-primary" '[data-bs-toggle="modal"]' '[data-bs-target="#staticBackdrop]'%>
            <% end %>
          </div>
        </div>
       </div>
      </div>
    </div>
  </div>
</div>
